<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4sp"
        android:padding="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_sp"
                android:layout_width="50sp"
                app:civ_border_width="0sp"
                android:layout_height="50sp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@drawable/design_circle"
                android:src="@drawable/dp"
                />


            <ImageView
                android:id="@+id/iv_gps"
                android:layout_width="40sp"
                android:layout_height="45sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:layout_toEndOf="@id/iv_sp"
                android:background="@drawable/design_circle"
                android:padding="7sp"
                android:src="@drawable/ic_location_on"
                android:backgroundTint="@color/darkPrimary"
                app:tint="@android:color/white" />

            <ImageView
                android:layout_width="40sp"
                android:layout_height="45sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@id/iv_gps"
                android:background="@drawable/design_circle"
                android:padding="7sp"
                android:src="@drawable/ic_search"
                android:backgroundTint="@color/darkPrimary"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/design_rectangle_round"
                android:drawableStart="@drawable/ic_add_box"
                android:drawablePadding="20sp"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:padding="20sp"
                android:text="POST"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/main_scroll"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical">

            <include layout="@layout/layout_feed" />

           <include layout="@layout/stopper"/>

            <include layout="@layout/layout_feed_image" />

            <include layout="@layout/stopper"/>

            <include layout="@layout/layout_feed" />

            <include layout="@layout/stopper"/>

            <include layout="@layout/layout_feed_image" />

            <include layout="@layout/stopper"/>

            <include layout="@layout/layout_feed" />

            <include layout="@layout/stopper"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>